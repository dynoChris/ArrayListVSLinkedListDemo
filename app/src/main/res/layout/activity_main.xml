<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/array_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ArrayList Populate"/>

    <Button
        android:id="@+id/array_del_center_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del from center"/>

    <Button
        android:id="@+id/linked_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LinkedList Populate"/>

    <Button
        android:id="@+id/linked_del_center_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="del from center"/>

</LinearLayout>